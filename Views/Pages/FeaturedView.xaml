<UserControl x:Class="NetEase.Views.Pages.FeaturedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:NetEase.Views"
             xmlns:componets="clr-namespace:NetEase.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="#1C1C1E">

    <UserControl.Resources>
        <!-- 卡片标题样式 -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <!-- 卡片描述样式 -->
        <Style x:Key="CardDescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="MaxHeight" Value="32"/>
        </Style>
        <!-- 导航箭头按钮样式 -->
        <Style x:Key="NavArrowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3B"/>
            <Setter Property="Foreground" Value="#AEAEAE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="14">
                            <TextBlock Text="{TemplateBinding Content}" FontFamily="Segoe MDL2 Assets" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="30,20">

            <!-- ============================================== -->
            <!-- 区域 1: 轮播图 和 “猜你喜欢” -->
            <!-- ============================================== -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：轮播图 -->
                <componets:CarouselCardView Grid.Column="0" Height="200" Margin="0,0,20,0"
                                        DataContext="{Binding CurrentCarouselItem}"/>

                <!-- 右侧：“猜你喜欢” -->
                <Border Grid.Column="1" CornerRadius="10" Padding="20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#40333338" Offset="0"/>
                            <GradientStop Color="#20333338" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <DockPanel>
                            <TextBlock Text="下午好，猜你最近喜欢听" FontSize="18" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="" Style="{StaticResource NavArrowButtonStyle}"/>
                                <Button Content="" Margin="5,0,0,0" Style="{StaticResource NavArrowButtonStyle}"/>
                            </StackPanel>
                        </DockPanel>

                        <ItemsControl ItemsSource="{Binding Suggestions}" Margin="0,15,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2" Rows="2"/>
                                    <!-- 修正为 2x2 网格 -->
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="CardContainer" Margin="5">
                                        <Border.RenderTransform>
                                            <ScaleTransform x:Name="CardScaleTransform" CenterX="90" CenterY="40" />
                                        </Border.RenderTransform>
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Color="Black" Opacity="0"/>
                                        </Border.Effect>

                                        <!-- 
                我们将动画触发器 (EventTrigger) 和 属性触发器 (DataTrigger) 分开。
                动画触发器只负责动画，属性触发器负责瞬间改变的属性，如 ZIndex。
            -->
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <!-- 使用 DataTrigger 来绑定到 Border 自身的 IsMouseOver 属性 -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <!-- 鼠标进入时，立即将 ZIndex 设为 10 -->
                                                        <Setter Property="Panel.ZIndex" Value="10"/>
                                                    </Trigger>
                                                    <!-- 当鼠标离开时 (IsMouseOver 变为 False)，ZIndex 会自动恢复为默认值 0 -->
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <!-- 动画触发器保持不变，但要删除里面的 ZIndex 动画 -->
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="CardScaleTransform" Storyboard.TargetProperty="ScaleX" To="1.2" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="CardScaleTransform" Storyboard.TargetProperty="ScaleY" To="1.2" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="CardContainer" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" To="0.5" Duration="0:0:0.2"/>
                                                        <!-- 删除 ZIndex 动画 -->
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="MouseLeave">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="CardScaleTransform" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="CardScaleTransform" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="CardContainer" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)" To="0" Duration="0:0:0.2"/>
                                                        <!-- 删除 ZIndex 动画 -->
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>

                                        <componets:SuggestionCardView Height="80" Width="180"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ============================================== -->
            <!-- 区域 2: 精选推荐 (只有一套) -->
            <!-- ============================================== -->
            <DockPanel Margin="0,40,0,15">
                <TextBlock Text="精选推荐" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <Button Content="🔄" FontSize="20" Background="Transparent" Foreground="Gray" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Cursor="Hand"/>
            </DockPanel>

            <ItemsControl ItemsSource="{Binding Recommendations}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- 卡片悬浮滑动动画的容器 -->
                        <Grid Height="240" Margin="8" Cursor="Hand">
                            <Grid.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="NormalStateUI" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="HoverStateUI" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="HoverOverlay" Storyboard.TargetProperty="Opacity" To="0.6" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="HoverStateUITransform" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="NormalStateUI" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="HoverStateUI" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="HoverOverlay" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="HoverStateUITransform" Storyboard.TargetProperty="Y" To="30" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Grid.Triggers>

                            <Border x:Name="HoverOverlay" Background="#000000" Opacity="0" CornerRadius="10" IsHitTestVisible="False"/>
                            <StackPanel x:Name="NormalStateUI">
                                <Border Height="180" CornerRadius="10">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding ImageUrl}" Stretch="UniformToFill"/>
                                    </Border.Background>
                                </Border>
                                <Grid Margin="0,8,0,0">
                                    <TextBlock Text="{Binding Title}" Style="{StaticResource CardTitleStyle}"/>
                                </Grid>
                                <TextBlock Text="{Binding Description}" Style="{StaticResource CardDescriptionStyle}"/>
                            </StackPanel>
                            <Grid x:Name="HoverStateUI" Opacity="0" IsHitTestVisible="False">
                                <Grid.RenderTransform>
                                    <TranslateTransform x:Name="HoverStateUITransform" Y="30"/>
                                </Grid.RenderTransform>
                                <Border CornerRadius="10" ClipToBounds="True">
                                    <Image Source="{Binding ImageUrl}" Stretch="UniformToFill" Opacity="0.3"/>
                                </Border>
                                <StackPanel Margin="15">
                                    <TextBlock Text="{Binding Description}" Foreground="White" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" MaxHeight="40"/>
                                    <ItemsControl ItemsSource="{Binding Tracklist}" Foreground="White" Margin="0,15,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" Margin="0,3" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <Border Background="White" Width="40" Height="40" CornerRadius="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                                    <TextBlock Text="▶" Foreground="Black" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3,0,0,0"/>
                                </Border>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- ============================================== -->
            <!-- 区域 3: 榜单精选 (只有一套) -->
            <!-- ============================================== -->
            <DockPanel Margin="0,40,0,15">
                <TextBlock Text="榜单精选 >" FontSize="22" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Cursor="Hand"/>
                <Button Content="🔄" FontSize="20" Background="Transparent" Foreground="Gray" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center" Cursor="Hand"/>
            </DockPanel>

            <ItemsControl ItemsSource="{Binding RankingLists}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" Rows="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <componets:RankingCardView Margin="8"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>