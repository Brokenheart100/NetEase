<UserControl x:Class="NetEase.Views.Components.SuggestionCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetEase.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- 根容器，用Border实现圆角和背景图片 -->
    <Border CornerRadius="8" ClipToBounds="True">
        <Border.Background>
            <ImageBrush ImageSource="{Binding ImageUrl}" Stretch="UniformToFill"/>
        </Border.Background>

        <!-- 使用Grid进行内容叠加布局 -->
        <Grid>
            <!-- 半透明的渐变蒙版，让文字更清晰 -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#55000000" Offset="0.5"/>
                    <GradientStop Color="#BB000000" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- 左下角的标签 -->
            <Border Background="#99FFFFFF" CornerRadius="4" Padding="6,2"
                    HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="8">
                <TextBlock Text="{Binding Tag}" Foreground="Black" FontSize="11" FontWeight="SemiBold"/>
            </Border>

            <!-- 右上角的标题文字 (为了简化，这里没有完全复现复杂的文字排版，只放一个标题) -->
            <!-- 在真实项目中，可能需要更复杂的TextBlock或RichTextBox来排版 -->
            <TextBlock Text="{Binding Title}" Foreground="White" FontSize="13" FontWeight="Bold"
                       TextWrapping="Wrap" TextAlignment="Right"
                       HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8"/>
        </Grid>
    </Border>
</UserControl>
