<UserControl x:Class="NetEase.Views.Components.CarouselCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetEase.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- 主容器，设置圆角和背景 -->
    <Border CornerRadius="10" ClipToBounds="True">
        <Border.Background>
            <ImageBrush ImageSource="{Binding BackgroundImageUrl}" Stretch="UniformToFill" Opacity="0.5"/>
        </Border.Background>

        <Grid ShowGridLines="True">
            <!-- 添加一层渐变蒙版，让背景更有层次感 -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="#A0505030" Offset="0"/>
                    <GradientStop Color="#00000000" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧文字信息区 -->
            <Grid Grid.Column="0" Margin="30,20" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 上方：标题和副标题 -->
                <StackPanel Grid.Row="0" VerticalAlignment="Top">
                    <TextBlock Text="{Binding Title}" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SubTitle}" Foreground="#E0E0E0" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- 中间：大字体主文案 -->
                <TextBlock Grid.Row="1" Text="{Binding MainText}" Foreground="White" FontSize="48" FontWeight="Bold"
                           VerticalAlignment="Center"/>

                <!-- 下方：描述和指示点 -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Border BorderBrush="White" BorderThickness="0,0,0,1" Height="12" Padding="0,0,5,0" Margin="0,0,5,0">
                        <TextBlock Text="|" Foreground="Transparent"/>
                        <!-- 只是为了撑开一点高度 -->
                    </Border>
                    <TextBlock Text="{Binding Description}" Foreground="#E0E0E0" FontSize="13" VerticalAlignment="Center"/>
                    <!-- 轮播指示点 (简化实现) -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center">
                        <Ellipse Fill="White" Width="6" Height="6"/>
                        <Ellipse Fill="#888888" Width="6" Height="6" Margin="5,0,0,0"/>
                        <Ellipse Fill="#888888" Width="6" Height="6" Margin="5,0,0,0"/>
                        <Ellipse Fill="#888888" Width="6" Height="6" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- 右侧专辑封面 -->
            <Grid Grid.Column="1" Margin="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" ShowGridLines="True">
                <!-- 专辑封面图 -->
                <Border Width="160" Height="160" CornerRadius="8">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding ImageUrl}" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
                <!-- "新歌首发" 标签 -->
                <Border Background="White" CornerRadius="4" Padding="8,4" 
                        HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-10,-10">
                    <TextBlock Text="{Binding Tag}" Foreground="Black" FontSize="12" FontWeight="SemiBold"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
