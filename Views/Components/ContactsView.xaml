<UserControl x:Class="NetEase.Views.Components.ContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetEase.Views.Components"
             xmlns:converters="clr-namespace:NetEase.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <Style x:Key="FriendTreeViewItemStyle"
            TargetType="TreeViewItem">
            <Setter Property="Padding"
                 Value="5,8"/>
            <Setter Property="Foreground"
                 Value="#555"/>
            <Style.Triggers>
                <Trigger Property="IsSelected"
                      Value="True">
                    <Setter Property="Background"
                         Value="#E8E8E8"/>
                    <Setter Property="Foreground"
                         Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- ================== 1. 自定义 TabItem 样式 ================== -->
        <Style x:Key="CustomTabItemStyle"
            TargetType="{x:Type TabItem}">
            <Setter Property="Width"
                 Value="70"/>
            <Setter Property="Foreground"
                 Value="#888888"/>
            <Setter Property="FontSize"
                 Value="15"/>
            <Setter Property="Padding"
                 Value="10,10,10,10"/>
            <Setter Property="Margin"
                 Value="0,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- 内容行 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 指示器行 -->
                            </Grid.RowDefinitions>

                            <!-- 头部内容 -->
                            <ContentPresenter x:Name="ContentSite"
                                           Grid.Row="0"
                                           ContentSource="Header"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                            <!-- 选中时的红色下划线指示器 -->
                            <Border x:Name="SelectionIndicator"
                                 Grid.Row="1"
                                 Background="#EC4141"
                                 Height="3"
                                 Margin="0,0,0,0"
                                 Visibility="Collapsed"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected"
                                  Value="True">
                                <Setter Property="Foreground"
                                     Value="White"/>
                                <Setter Property="FontWeight"
                                     Value="Bold"/>
                                <Setter TargetName="SelectionIndicator"
                                     Property="Visibility"
                                     Value="Visible"/>
                            </Trigger>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected"
                                            Value="False"/>
                                    <Condition Property="IsMouseOver"
                                            Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Foreground"
                                     Value="#BBBBBB"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================== 2. 自定义 TabControl 样式 ================== -->
        <Style x:Key="CustomTabControlStyle"
            TargetType="{x:Type TabControl}">
            <Setter Property="BorderThickness"
                 Value="0"/>
            <Setter Property="Background"
                 Value="Transparent"/>
            <Setter Property="Padding"
                 Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

        
        <Grid Grid.Row="1"
           Background="BlanchedAlmond"
           ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <!-- 左侧导航栏 -->
                <ColumnDefinition Width="*"/>
                <!-- 右侧内容区 -->
            </Grid.ColumnDefinitions>

            <!-- ======================= 左侧导航栏 ======================= -->
            <Border Grid.Column="0"
                 BorderBrush="#E0E0E0"
                 BorderThickness="0,0,1,0">
                <StackPanel>
                    <!-- 搜索框和 Tabs -->
                    <Grid Margin="10">
                        <TextBox Text="搜索"
                              Foreground="Gray"
                              Padding="8,5"
                              BorderBrush="#DDD"
                              BorderThickness="1"/>
                        <TextBlock Text="+"
                                FontSize="18"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"/>
                    </Grid>
                    <TabControl Margin="10,0"
                             BorderThickness="0">
                        <TabItem Header="好友"/>
                        <TabItem Header="群聊"/>
                    </TabControl>

                    <!-- 好友列表 (使用 TreeView) -->
                    <TreeView ItemsSource="{Binding FriendGroups}"
                           BorderThickness="0"
                           ItemContainerStyle="{StaticResource FriendTreeViewItemStyle}">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <Grid ShowGridLines="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0"
                                          Width="32"
                                          Height="32"
                                          Margin="0,0,10,0">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding AvatarUrl}"
                                                     Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <StackPanel Grid.Column="1"
                                             Orientation="Horizontal"
                                             VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"/>
                                        <TextBlock Text="{Binding Status}"
                                                FontSize="10"
                                                Foreground="Gray"
                                                Visibility="{Binding Status, Converter={StaticResource StringToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </StackPanel>
            </Border>

            <!-- ======================= 右侧内容区 ======================= -->
            <Grid Grid.Column="1"
               ShowGridLines="True">
                <!-- 居中的引导视图 -->
                <StackPanel VerticalAlignment="Center"
                         HorizontalAlignment="Center">
                    <!-- 1. 大图标 (这里用 Path 绘制一个简化的版本) -->
                    <Grid Width="150"
                       Height="100"
                       Margin="0,0,0,30"
                       ShowGridLines="True">
                        <Path Data="M 75,20 A 20,20 0 1 1 75,60 A 20,20 0 0 1 75,20 M 50,80 H 100 V 95 H 50 Z"
                           Fill="#5294E2"
                           Opacity="0.8"/>
                        <Path Data="M 100,30 A 15,15 0 1 1 100,60 A 15,15 0 0 1 100,30 M 85,75 H 115 V 90 H 85 Z"
                           Fill="#5294E2"
                           Opacity="0.4"
                           Margin="10,5,0,0"/>
                        <Ellipse Fill="#5294E2"
                              Width="6"
                              Height="6"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Margin="20,0,0,-20"/>
                        <Ellipse Fill="#5294E2"
                              Width="4"
                              Height="4"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="0,0,15,-30"/>
                    </Grid>

                    <!-- 2. 主标题 -->
                    <TextBlock Text="打开世界的另一扇窗"
                            FontSize="24"
                            FontWeight="SemiBold"
                            Foreground="#333"
                            HorizontalAlignment="Center"/>

                    <!-- 3. 副标题 -->
                    <TextBlock Text="主动一点，世界会更大。"
                            FontSize="14"
                            Foreground="Gray"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
</UserControl>
