<Window x:Class="NetEase.Views.InputDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:NetEase.Views" 
        xmlns:viewmodels="clr-namespace:NetEase.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:InputDialogViewModel}"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Message}" Margin="0,0,0,10"/>

        <TextBox Grid.Row="1" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                 MinWidth="250"
                 VerticalAlignment="Center"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <!-- 
                CommandParameter 通过 RelativeSource 绑定到了这个 Window 自身
            -->
            <Button Content="确定" Command="{Binding OkCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    IsDefault="True" MinWidth="75" Margin="0,0,10,0"/>
            <Button Content="取消" Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    IsCancel="True" MinWidth="75"/>
        </StackPanel>
    </Grid>
</Window>
